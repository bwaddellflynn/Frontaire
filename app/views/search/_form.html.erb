<%= search_form_for(@query, url: "/search/#{search_path}", method: :get, class: 'd-flex') do |f| %>
    <%= f.search_field :destination_or_arrival_iata_or_departure_iata_i_cont,
    placeholder: "Search...",
    class: "form-control me-2"%>
    <%= f.collection_select :departure_iata_i_cont, Flight.order(:departure_iata), :departure_iata,:departure_iata, include_blank: true, class: 'dropdown-menu' %>
    <%= f.submit "Find Flights!" , class: "btn btn-dark"%>
<% end %>